<h3 style="color:#245CA6;">User  List</h3>
<table class="table  table-responsive" >
    <thead >
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Status</th>
            <th>Role</th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td style="color:#212445;">{{this.status}}</td>
            <td>{{this.role}}</td>
           
            <td>
    
            <a class="btn btn-success"  href="/employee/{{this._id}}"></i> Edit</a>
            <a class="btn btn-danger" href="/employee/delete/{{this._id}}"  onclick="return confirm('Are you sure to delete this record ?');"></i> Delete</a>
     
            </td>
        </tr>
        {{/each}}
    </tbody>
  
  
</table>
<div class="form-group">
   
    <a class="btn btn-success" href="/employee"><i class="fa fa-paw"></i> Add New</a>
</div>